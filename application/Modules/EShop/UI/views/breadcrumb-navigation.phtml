 */
$items = Navigation_Breadcrumb::getItems();
?>
<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<?php foreach( $items as $item ):
			/*
			$icon = $item->getPage()?->getIcon();
			if($icon) {
				$icon = UI::icon($icon).'&nbsp;&nbsp;&nbsp;';
			}
			*/

					<div><a href="<?= $item->getURL(); ?>"><?=$icon?></a></div>
					<div><a href="<?= $item->getURL(); ?>"><?= $item->getTitle(); ?></a></div>
				<?php else: ?>
					<div><?=$icon?></div>
					<div><b><?= $item->getTitle(); ?></b></div>
					
				<?php endif; ?>
			</li>
		<?php endforeach; ?>
	</ol>
</nav>

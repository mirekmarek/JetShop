<?php
namespace JetShopModule\Admin\Catalog\Categories;

use Jet\MVC_View;
use Jet\Tr;
use JetShop\PropertyGroup;

/**
 * @var MVC_View   $this
 * @var PropertyGroup[] $result
 */

$result = $this->getRaw('result');

if($result):
	$i=0;
	foreach( $result as $group ):
		$i++;
		?><span
		data-id="<?=$group->getId()?>"
		data-name="<?=$group->getInternalName()?>"
		data-url="<?=$group->getEditURL()?>"
		class="search-whisperer-item<?=$i==1?' search-whisperer-item-selected':''?>"
		<?php if(!$group->isActive() || !$group->getShopData()->isActive()):?>
		style="text-decoration: line-through"
	<?php endif; ?>
		><?=$group->getInternalName()?></span><?php
	endforeach;
else:
	?>
	<span class="search-whisperer-message">
		<?=Tr::_('... sorry, not found ...')?>
	</span>
<?php
endif;


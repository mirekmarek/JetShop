<?php
namespace JetShopModule\Admin\Catalog\Categories;

use Jet\MVC_View;
use Jet\Tr;
use JetShop\Category;

/**
 * @var MVC_View   $this
 * @var Category[] $result
 */

$result = $this->getRaw('result');

if($result):
	$i=0;
	foreach( $result as $category ):
		$i++;
		?><span
			data-id="<?=$category->getId()?>"
			data-name="<?=$category->_getPathName()?>"
			data-url="<?=$category->getEditURL()?>"
			class="search-whisperer-item<?=$i==1?' search-whisperer-item-selected':''?>"
			<?php if(!$category->getShopData()->isActive()):?>
			style="text-decoration: line-through"
			<?php endif; ?>
		><?=$category->_getPathName()?></span><?php
	endforeach;
else:
	?>
	<span class="search-whisperer-message">
		<?=Tr::_('... sorry, not found ...')?>
	</span>
	<?php
endif;


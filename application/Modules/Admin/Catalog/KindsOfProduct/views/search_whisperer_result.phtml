<?php
namespace JetShopModule\Admin\Catalog\Categories;

use Jet\MVC_View;
use Jet\Tr;
use JetShop\KindOfProduct;

/**
 * @var MVC_View   $this
 * @var KindOfProduct[] $result
 */

$result = $this->getRaw('result');

if($result):
	$i=0;
	foreach( $result as $kind ):
		$i++;
		?><span
		data-id="<?=$kind->getId()?>"
		data-name="<?=$kind->getInternalName()?>"
		data-url="<?=$kind->getEditURL()?>"
		class="search-whisperer-item<?=$i==1?' search-whisperer-item-selected':''?>"
		<?php if(!$kind->isActive() || !$kind->getShopData()->isActive()):?>
		style="text-decoration: line-through"
	<?php endif; ?>
		><?=$kind->getInternalName()?></span><?php
	endforeach;
else:
	?>
	<span class="search-whisperer-message">
		<?=Tr::_('... sorry, not found ...')?>
	</span>
<?php
endif;


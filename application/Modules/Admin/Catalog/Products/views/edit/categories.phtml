<?php
namespace JetApplicationModule\Admin\Catalog\Products;

use Jet\MVC_View;
use JetApplication\Admin_Managers;
use JetApplication\Category;
use JetApplication\Product;

/**
 * @var MVC_View   $this
 * @var Product $item
 */

$product = $this->getRaw('product');

require '_toolbar.phtml';
?>

<div id="main-col">
		<?=$this->getRaw('tabs')?>

		<table class="table table-striped">
			<tbody>
			<?php foreach( Category::getIdsByProduct($product->getId()) as $category_id):
				$category = Category::load($category_id);
				if(!$category) {
					continue;
				}
				?>
				<tr>
					<td>
						<div style="display: flex;gap: 5px;align-items: center">
							<div><?=Admin_Managers::EntityEdit_WithEShopData()->renderPreviewButton( $category )?></div>
							<div><?=Admin_Managers::Category()->renderActiveState( $category )?></div>
							<div><?=Admin_Managers::Category()->showName( $category )?></div>
						</div>
					</td>
				</tr>
			<?php endforeach;  ?>
			</tbody>
		</table>
</div>

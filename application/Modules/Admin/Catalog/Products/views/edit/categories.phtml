namespace JetApplicationModule\Admin\Catalog\Products;


use Jet\Http_Request;
use Jet\MVC_View;
use Jet\Tr;
use Jet\UI;
use Jet\UI_button;
use JetApplication\Application_Service_Admin;
use JetApplication\Category;
use JetApplication\Product;

/**
 * @var MVC_View   $this
 * @var Product $product
 */

$product = $this->getRaw('product');

require '_toolbar.phtml';
?>

<?=$this->getRaw('tabs')?>

<div id="main-toolbar" class="toolbar">
	
	<?php if(Main::getCurrentUserCanEdit()): ?>
	<div style="font-weight: bolder;padding-left: 20px;">
		<?=Tr::_('Add category')?>
	</div>
	<div style="width: 300px">
		<?=Application_Service_Admin::Category()->renderSelectWidget("location.href='".Http_Request::currentURI()."&add_category='+selected_item.id;")?>
	</div>
	<?php endif; ?>
</div>
<div id="main-col">

		<table class="table table-striped">
			<tbody>
			<?php foreach( Category::getIdsByProduct($product->getId()) as $category_id):
				$category = Category::load($category_id);
				if(!$category) {
					continue;
				}
				?>
				<tr>
					<td>
						<div style="display: flex;gap: 5px;align-items: center">
							<?php if(Main::getCurrentUserCanEdit()): ?>
							<div style="padding-right: 20px">
								<?=UI::button_delete(' ')
									->setUrl( Http_Request::currentURI(set_GET_params: ['remove_category'=>$category_id]) )
									->addJsAction('onclick', "return confirm('".Tr::_('Do you really want to delete this category?')."');")
									->setSize(UI_button::SIZE_EXTRA_SMALL)?>
							</div>
							<?php endif; ?>
							<div><?=Application_Service_Admin::EntityEdit()->renderPreviewButton( $category )?></div>
							<div><?=Application_Service_Admin::Category()->renderActiveState( $category )?></div>
							<div><?=Application_Service_Admin::Category()->renderItemName( $category )?></div>
						</div>
					</td>
				</tr>
			<?php endforeach;  ?>
			</tbody>
		</table>
</div>

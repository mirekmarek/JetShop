$product = Controller_Main::getCurrentProduct();

?>

<style type="text/css">
	.images_area>div {
		float: left;
	}
</style>

<script type="text/javascript">

	const ImagesHandler = {
		delete_shop_id: null,
		delete_images: null,

		_handleResponse: function( shop_id, response ) {

			for(let el_id in response['snippets']) {
				document.getElementById(el_id).innerHTML = response['snippets'][el_id];
			}

			ImagesHandler.initSort( shop_id );
		},

		initSort: function( shop_id ) {
			$('#images_'+shop_id).sortable({
				revert: true,
				stop: function() {
					ImagesHandler.saveSort( shop_id );
				}
			});
		},

		saveSort: function( shop_id ) {
			var images = [];

			$('#images_'+shop_id).find('.image-thumbnail').each(function ( i, image ) {
				images.push( $(image).data('image') );
			});

			$.ajax({
				url: '?id=<?=$product->getId()?>&page=images&action=save_sort&images='+images.join(',')+'&shop_id='+shop_id,
				dataType: "json",
				success: function( response ) {
					ImagesHandler._handleResponse(shop_id, response);
				}
			});
		},

		deleteImage: function( shop_id, image, url ) {
			ImagesHandler._delete(shop_id, [{
				image: image,
				url: url
			}]);
		},

		deleteImages: function( shop_id )
		{
			var images = [];

			$('.select_image_checkbox').each( function(i, checkbox) {
				if(checkbox.checked) {
					images.push( {
						image: checkbox.value,
						url: checkbox.dataset.url
					} );
				}
			});

			if(images.length) {
				ImagesHandler._delete(shop_id, images);
			}

		},

		_delete: function( shop_id, images ) {

			ImagesHandler.delete_shop_id = shop_id;
			ImagesHandler.delete_images = images;

			let html = '';
			for(let i=0;i<images.length;i++) {
				let image = images[i];

				html += '<div class="image-thumbnail" style="float:left;width: 180px;height: 180px;background-image: url('+image.url+');background-size: 170px auto;"></div>';
			}

			$('#image_delete_confirm_area').html( html );

			$('#delete_image_confirm').modal('show');
		},

		deleteConfirm: function () {
			let images = [];
			for(let i=0; i<ImagesHandler.delete_images.length;i++) {
				images.push(encodeURIComponent(ImagesHandler.delete_images[i].image));
			}

			$.ajax({
				url: '?id=<?=$product->getId()?>&page=images&action=delete&shop_id='+ImagesHandler.delete_shop_id+'&images='+images.join(','),
				dataType: "json",
				success: function( response ) {
					ImagesHandler._handleResponse(ImagesHandler.delete_shop_id, response);
				}
			});
			$('#delete_image_confirm').modal('hide');

		},


		upload: function( shop_id ) {
			JetAjaxForm.submitMultiUpload(
				'upload_form_'+shop_id,
				'images',
			);
		}
	};

	$(document).ready(function () {
		<?php foreach(Shops::getList() as $shop):
		$shop_id = $shop->getId();
		 ?>
		ImagesHandler.initSort('<?=$shop_id?>');
		<?php endforeach; ?>
	})
</script>

	<div class="row toolbar" id="main-toolbar">
		<div class="col-md-12">
			<?=UI::button_goBack()?>

			<?=$this->render('edit/preview_button');?>
		</div>
	</div>

<div class="row">
	<div class="col-md-12">
		<?=$this->getRaw('tabs')?>

	<?php foreach(Shops::getList() as $shop):
		$shop_id = $shop->getId();

		$shop_data = $product->getShopData($shop_id);
		$this->setVar('shop_id', $shop_id);
	?>
		<?=$shop_data->renderShopDataBlock_start()?>


		<div style="background-color: #f0f0f0;border-radius: 5px;margin: 10px;padding: 10px;">
			<div class="images_area" id="images_<?=$shop_id?>" style="height: 500px;overflow: auto;margin: 5px;padding: 5px;">
				<?php
				require 'images/list.phtml';
				?>
			</div>
		</div>

		<table style="width: 100%">
			<tr>
				<td>
					<form id="upload_form_<?=$shop_id?>" action="?id=<?=$product->getId()?>&page=images&action=upload&shop_id=<?=$shop_id?>">
						<div class="btn btn-light btn-upload">
							<?=UI::icon('upload')?>&nbsp;<span><?=Tr::_('Select and upload images' )?></span>
							<input type="file" multiple id="upload_files_<?=$shop_id?>" name="images[]" class="upload-button" onchange="ImagesHandler.upload('<?=$shop_id?>');">
						</div>
					</form>
				</td>
				<td align="right" style="padding: 10px">
					<?=UI::button_delete(Tr::_('Delete selected images'))->setOnclick("ImagesHandler.deleteImages('$shop_id');")?>
				</td>
			</tr>
		</table>

		<?=$shop_data->renderShopDataBlock_end()?>
		<br/>
	<?php endforeach; ?>

	</div>
</div>



<?php
namespace JetApplicationModule\Admin\Catalog\Products;

use Jet\MVC_View;
use JetApplication\Admin_Managers;
use JetApplication\Pricelists;

/**
 * @var MVC_View $this
 * @var Product $item
 */

$item = $this->getRaw('item');

?>
<?php foreach(Pricelists::getList() as $pricelist): ?>
	<?=$pricelist->getName()?>: <b><?=Admin_Managers::PriceFormatter()->formatWithCurrency(
		$pricelist->getCurrency(),
		$item->getPrice( $pricelist )
	)?><br></b>
<?php endforeach; ?>
